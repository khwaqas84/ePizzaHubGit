@{
    ViewData["Title"] = "Home Page";
    Layout = "_FullSizeLayout";
}

<div style="background-color:skyblue">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 pt-4 pb-2">
                <h1>Wellcome to ePizzaHub</h1>
                <p class="pb-4 pt-5">
                    Lorem ipsum dolor, sit amet consectetur 
                </p>
                <a href="/" class="btn btn-primary"> Order Online Now</a>
            </div>
            <div class="col-sm-4">
                <img src="~/images/pizza-header.png"  style="width:100%;height:100%" class="img-fluid"/>
            </div>

        </div>
    </div>
</div>
<div class="container mt-5">
    <h2>Desert,Pizza and brevages</h2>
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-sm-4 mt-3">
                <div class="card mb-3">
                    <img src="@item.ImageUrl" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name <span class="float-end">@item.UnitPrice</span></h5>
                        <div class="card-text">@item.Name</div>
                        <button onclick="AddToCart('@item.Id','@item.Name','@item.UnitPrice',1)"  class="btn btn-primary" >Add To Cart</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>
}